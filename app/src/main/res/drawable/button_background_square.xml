<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffcc00"/> <!-- 버튼이 눌렸을 때의 배경색 -->
            <corners android:radius="0dp"/> <!-- 네모난 모서리 -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- 테두리 -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ff9900"/> <!-- 기본 배경색 -->
            <corners android:radius="0dp"/> <!-- 네모난 모서리 -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- 테두리 -->
        </shape>
    </item>
</selector>